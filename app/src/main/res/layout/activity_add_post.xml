<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_add_post"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/MyToolbarStyle"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <EditText
        android:layout_below="@+id/my_toolbar_add_post"
        android:id="@+id/add_post_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_100_dp"
        android:theme="@style/MyToolbarStyle"
        android:background="@drawable/blue_bg"
        android:hint="@string/hint_title"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:gravity="center_horizontal|center"
        android:letterSpacing="-0.01"/>
    <TextView
        android:id="@+id/add_post_choose_bg_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/choose_bg"
        android:layout_below="@+id/add_post_title"
        android:textColor="@color/text_color_ep"
        android:background="@color/grey_custom"
        android:textAllCaps="true"
        android:textSize="13sp"
        android:letterSpacing="-0.01"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/margin_padding_15"
        android:paddingEnd="@dimen/zero_dp"/>
    <!--<android.support.v7.app.AlertController.RecycleListView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/add_post_choose_bg_info"/>-->
    <LinearLayout
        android:id="@+id/add_post_bgs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_40"
        android:layout_below="@id/add_post_choose_bg_info">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/red_bg"
            android:clickable="true"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/green_bg"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/blue_bg"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/yellow_bg"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/violet_bg"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_post_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_custom"
        android:layout_below="@id/add_post_bgs"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_post_add_category_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:letterSpacing="-0.01"
            android:paddingBottom="@dimen/padding8dp"
            android:paddingStart="@dimen/margin_padding_15"
            android:paddingTop="@dimen/padding8dp"
            android:text="@string/Select_Category"
            android:textAllCaps="true"
            android:textColor="@color/text_color_ep"
            android:textSize="@dimen/text_13sp"
            android:textStyle="normal"
            />

        <ImageView
            android:id="@+id/iv_icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_next"
            android:layout_marginEnd="@dimen/lay_mar_pad_10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/et_content_add_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/add_post_add_category"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/Black"
        android:gravity="start"
        android:layout_margin="@dimen/lay_mar_pad_10dp"
        android:letterSpacing="-0.01"
        android:hint="Insert text here â€¦"
        android:textColorHint="@color/grey_custom"/>
</RelativeLayout>