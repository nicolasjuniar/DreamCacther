<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/BgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#80000000" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_add_photo"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/add_photo_cover"
                    android:layout_marginRight="10dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/default_avatar"
                    android:id="@+id/AvatarUser"
                    android:layout_marginTop="60dp"
                    android:layout_centerHorizontal="true"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_add_photo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="115dp"
                    android:id="@+id/add_photo_user"
                    android:layout_alignRight="@+id/AvatarUser"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/Black"
                    android:id="@+id/name"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtName"
                        android:hint="enter your name"
                        android:textColorHint="@color/Gray"
                        android:layout_marginBottom="18dp"
                        />
                    <LinearLayout
                        android:id="@+id/name_indicator"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingTop="25dp"
                        >
                        <TextView
                            android:textColor="@color/Teal"
                            android:id="@+id/fullnamecounter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            />

                        <TextView
                            android:id="@+id/name_max"
                            android:textColor="@color/Teal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/18" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/Black"
                    android:id="@+id/location"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="ex. Indonesia"
                        android:textColorHint="@color/Gray"
                        android:id="@+id/txtLocation"
                        android:layout_marginBottom="18dp"/>
                    <LinearLayout
                        android:id="@+id/location_indicator"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingTop="25dp">
                        <TextView
                            android:id="@+id/location_counter"
                            android:textColor="@color/Teal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/max_location"
                            android:textColor="@color/Teal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/18" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:id="@+id/bio"
                    android:textColor="@color/Black"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:maxLines="3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/Gray"
                        android:hint="ex. Tech Entusiast"
                        android:id="@+id/txtBio"
                        android:layout_marginBottom="18dp" />
                    <LinearLayout
                        android:id="@+id/bio_indicator"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingTop="25dp">
                        <TextView
                            android:id="@+id/bio_counter"
                            android:textColor="@color/Teal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/max_bio"
                            android:textColor="@color/Teal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/100" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>



</android.support.design.widget.CoordinatorLayout>