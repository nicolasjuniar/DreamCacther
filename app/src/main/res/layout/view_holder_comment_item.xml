<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cv_comment_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="21dp">
        <ImageView
            android:id="@+id/iv_avatar_com"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/tv_name_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#18587a"
            android:text="Andre Glover"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_avatar_com"
            android:layout_toEndOf="@+id/iv_avatar_com"
            android:layout_marginStart="9dp"/>
        <TextView
            android:id="@+id/tv_content_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#000000"
            android:text="nais banget gan"
            android:layout_below="@+id/tv_name_com"
            android:layout_toRightOf="@id/iv_avatar_com"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            />
        <TextView
            android:id="@+id/tv_date_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content_com"
            android:layout_toRightOf="@id/iv_avatar_com"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:text="5 minutes ago"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#9b9b9b"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>