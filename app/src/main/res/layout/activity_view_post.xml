<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="@dimen/lay_mar_pad_10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_view_post"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/MyToolbarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_vp"
        android:layout_marginStart="@dimen/lay_mar_pad_10dp"
        android:layout_marginTop="@dimen/lay_mar_pad_10dp"
        android:layout_width="@dimen/avatar_30dp"
        android:layout_height="@dimen/avatar_30dp"
        android:layout_below="@id/toolbar_view_post"
        android:foregroundGravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_name_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_view_post"
        android:layout_toEndOf="@+id/avatar_vp"
        android:layout_marginStart="@dimen/mar_pad_lay_5dp"
        android:textSize="@dimen/text_16sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/lay_mar_pad_10dp"
        android:textColor="@color/charcoalGrey"
        android:letterSpacing="-0.01"/>
    <TextView
        android:id="@+id/tv_date_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_toEndOf="@+id/avatar_vp"
        android:layout_below="@+id/tv_name_vp"
        android:layout_marginStart="@dimen/mar_pad_lay_5dp"
        android:textSize="@dimen/text_12sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:textColor="@color/charcoalGrey"
        android:letterSpacing="-0.01"
        />
    <ImageButton
        android:id="@+id/bookmark_icon_vp"
        android:layout_below="@+id/toolbar_view_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_bookmark"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/lay_mar_pad_10dp"
        android:layout_marginEnd="@dimen/lay_mar_pad_10dp"/>
    <TextView
        android:id="@+id/tv_category_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_view_post"
        android:layout_toStartOf="@+id/bookmark_icon_vp"
        android:textSize="@dimen/text_16sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="@color/light_navy"
        android:letterSpacing="-0.01"
        android:layout_marginTop="@dimen/margin_padding_15"
        android:layout_marginEnd="@dimen/lay_mar_pad_10dp"
        />


    <RelativeLayout
        android:id="@+id/view_post_fragment_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lay_mar_pad_10dp"
        android:layout_marginRight="@dimen/lay_mar_pad_10dp"
        android:layout_below="@+id/avatar_vp"
        android:layout_marginTop="@dimen/mar_pad_lay_11dp"
        >
        <ImageView
            android:id="@+id/bg_view_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_100_dp"
            android:layout_marginTop="@dimen/mar_pad_lay_11dp"/>
        <TextView
            android:id="@+id/tv_title_view_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/marg_pad_lay_50dp"
            android:textAlignment="center"
            android:shadowColor="@color/Black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="@dimen/text_20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/White"
            android:letterSpacing="-0.01"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrv_content_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_padding_15"
        android:layout_marginEnd="@dimen/margin_padding_15"
        android:layout_marginTop="@dimen/marg_pad_20dp"
        android:layout_below="@id/view_post_fragment_top">
        <TextView
            android:id="@+id/tv_content_vp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.01"
            android:textSize="@dimen/text_14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/charcoalGrey"
            android:lineSpacingExtra="2sp"
            />
    </ScrollView>

</RelativeLayout>