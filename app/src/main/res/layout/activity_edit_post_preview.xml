<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="@dimen/lay_mar_pad_10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White">
    <!--layout untuk EDIT POST PREVIEW-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_epp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/MyToolbarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />
    <RelativeLayout
        android:id="@+id/rl_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_epp"
        android:layout_marginStart="@dimen/lay_mar_pad_10dp"
        android:layout_marginEnd="@dimen/lay_mar_pad_10dp">
        <ImageView
            android:id="@+id/bg_epp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_100_dp"
            android:layout_marginTop="@dimen/lay_mar_pad_10dp"
            />
        <TextView
            android:id="@+id/tv_title_epp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/marg_pad_lay_50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_20sp"
            android:shadowColor="@color/Black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <ImageButton
            android:id="@+id/bookmark_icon_epp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bookmark"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/lay_pad_mar_13dp"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar_epp"
        android:layout_width="@dimen/marg_pad_lay_50dp"
        android:layout_height="@dimen/marg_pad_lay_50dp"
        android:layout_marginStart="@dimen/marg_pad_20dp"
        android:layout_marginTop="@dimen/marg_pad_lay_50dp"
        android:layout_alignStart="@+id/scrv_content_epp"/>
    <TextView
        android:id="@+id/tv_name_epp"
        android:layout_below="@id/rl_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lay_mar_pad_10dp"
        android:textSize="@dimen/text_20sp"
        android:textStyle="bold" />
        <TextView
        android:id="@+id/tv_in_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/White"
        android:layout_below="@id/tv_name_epp"
        android:layout_alignStart="@id/tv_name_epp"
        />
        <TextView
        android:id="@+id/tv_category_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civ_avatar_epp"
        android:layout_below="@id/tv_name_epp"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/charcoalGrey"
        android:layout_marginStart="@dimen/mar_pad_lay_5dp"
        />
    <TextView
        android:id="@+id/tv_date_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_14sp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:textColor="@color/Black"
        android:letterSpacing="-0.01"
        android:gravity="end"
        android:layout_below="@id/tv_name_epp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/margin_padding_15"
        />
    <ScrollView
        android:id="@+id/scrv_content_epp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_15"
        android:layout_marginEnd="@dimen/lay_mar_pad_10dp"
        android:layout_below="@id/tv_date_epp"
        android:layout_marginTop="@dimen/lay_mar_pad_10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content_epp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/charcoalGrey"
                android:letterSpacing="-0.01"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>