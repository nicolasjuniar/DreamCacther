<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White">
    <!--layout untuk EDIT POST PREVIEW-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_epp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/MyToolbarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />
    <RelativeLayout
        android:id="@+id/rl_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_epp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <ImageView
            android:id="@+id/bg_epp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tv_title_epp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="@color/Black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <ImageButton
            android:id="@+id/bookmark_icon_epp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_bookmark"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_avatar_epp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="85dp"
        android:layout_alignStart="@+id/scrv_content_epp"/>
    <TextView
        android:id="@+id/tv_name_epp"
        android:layout_below="@id/rl_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />
        <TextView
        android:id="@+id/tv_in_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#fc624d"
        android:layout_below="@id/tv_name_epp"
        android:layout_alignStart="@id/tv_name_epp"
        />
        <TextView
        android:id="@+id/tv_category_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/civ_avatar_epp"
        android:layout_below="@id/tv_name_epp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#4a4a4a"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/tv_date_epp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="normal"
        android:textColor="#000000"
        android:letterSpacing="-0.01"
        android:gravity="end"
        android:layout_below="@id/tv_name_epp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        />
    <ScrollView
        android:id="@+id/scrv_content_epp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/tv_date_epp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content_epp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#4a4a4a"
                android:letterSpacing="-0.04"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>