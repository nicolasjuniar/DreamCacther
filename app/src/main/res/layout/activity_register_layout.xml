<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_return"
                android:tint="@color/duckEggBlue"
                android:id="@+id/btnReturn"/>

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="return"
                android:id="@+id/return1"
                android:textColor="@color/duckEggBlue"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dreamcatcher"
                android:textColor="@color/duckEggBlue"
                android:textSize="30dp"
                android:id="@+id/title1"
                android:textStyle="bold"
                />

            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:background="@color/Coral" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="What is a &quot;dreamer&quot; really need"
                android:textStyle="bold"
                android:textColor="@color/duckEggBlue"
                android:id="@+id/title2"
                android:textSize="25dp"/>
        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="-10dp"
                        android:hint="Name"
                        android:backgroundTint="@color/colorAccent"
                        android:textColor="@color/charcoalGrey"
                        android:textSize="20dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:hint="Email"
                        android:backgroundTint="@color/colorAccent"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/charcoalGrey"
                        android:textSize="20dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textColor="@color/charcoalGrey"
                        android:textSize="20dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtRepassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/colorAccent"
                        android:inputType="textPassword"
                        android:textColor="@color/charcoalGrey"
                        android:hint="Re-Type Password"
                        android:textSize="20dp"
                        android:maxLines="1"
                        android:singleLine="true"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/Coral"
            android:layout_marginBottom="10dp"/>


        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/capsule_button_1"
            android:text="Register"
            android:id="@+id/btnRegister"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/White"/>
    </LinearLayout>
</ScrollView>
